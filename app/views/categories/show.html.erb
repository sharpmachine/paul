<% title @category.name %>

<div class="container">
<div class="row">
	<div class="span24">
		<h3><%= link_to image_tag("category.png"), posts_path, :title => "Back to Blog Home" %>&nbsp;Category / <strong><%= @category.name %></strong></h3>
	</div>
</div>	
<div class="row">
	
	<div class="span17">
		
		<% if @posts.any? %>	
			<% @posts.in_groups_of(2, false) do |posts| %>  
				<div class="row">
			      <% posts.each do |post| %>  
			      <div class="span8">
					<h5><%= post.category.name %></h5>
				    <%= render post %>
				  </div>
			      <% end %>  
				</div>
			<% end %>	
		<% else %>
			<div class="row">
		      <div class="span8">
				<h5>No Posts Found</h5>
			  </div>
			</div>			
		<% end %>
	</div>

	<div class="span7">
		<%= render :partial => "posts/side" %>
	</div>	

</div>
<div class="row">
	<div class="span24 pad"></div>
</div>
<div class="row">
	<div class="span24">
		<%= paginate @posts %>
	</div>	
</div>	

</div>


