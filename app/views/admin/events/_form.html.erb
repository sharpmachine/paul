<%= simple_form_for [:admin, @event], :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>

<legend>Event Status</legend>

  <%= f.input :status, :collection => Event::STATUS_LIST, :label_method => :humanize %>

</fieldset>
<fieldset>
<legend>Church/Ministry Information</legend>

  <%= f.input :organization %>
  <%= f.input :organization_address %>
  <%= f.input :organization_address2 %>
  <%= f.input :organization_city %>
  <%= f.input :organization_state %>
  <%= f.input :organization_zip %>
  <%= f.input :organization_country %>
  <%= f.input :website %>

</fieldset>
<fieldset>
<legend>Your Information</legend>

<%= f.input :name %>
<%= f.input :phone %>
<%= f.input :email %>

</fieldset>
<fieldset>	
<legend>Event Information</legend>

  <%= f.input :event_type %>
  <%= f.input :theme %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>
  <%= f.input :estimated_attendance %>
  <%= f.input :other_speakers %>
  <%= f.input :budget_for_additional_traveller %>
  <%= f.input :housing %>
  <%= f.input :bethel_students %>
  <%= f.input :bethel_students_total %>
  <%= f.input :bethel_student_housing %>

</fieldset>
<fieldset>
<legend>Event Location</legend>

  <%= f.input :location_name %>
  <%= f.input :address %>
  <%= f.input :address2 %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip %>
  <%= f.input :country %>
  <%= f.input :information %>
  <%= f.input :airport %>

</fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_events_path, :class => "btn" %>
  </div>
<% end %>