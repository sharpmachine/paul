<%= simple_form_for [:admin, @inquiry], :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>
<legend><%= controller.action_name.capitalize %> Inquiry</legend>

  <%= f.input :email %>
  <%= f.input :description %>

</fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_inquiries_path, :class => "btn" %>
  </div>
<% end %>