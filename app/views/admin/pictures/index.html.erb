<% title "Picture Library" %>
<% selected_nav "pages" %>

<%= show_breadcrumbs() %>
<div id="section_head" class="index"><div class="pad">
	
	<div class="actionbar">
		<% if can? :create, Picture %>
		  <%= link_to 'Upload Picture', new_admin_picture_path, :class => 'btn add' %>
		<% end %>
	</div>
	
	<h1><%= @title %></h1>

</div></div>

<div id="content"><div class="pad">
	
	<div class="results_info">
		<p class="results_total">
			<%= pluralize(@pictures.count, 'pictures') %>
		</p>
	</div>

	<table>
	  <tr>
	    <th>Picture Thumbnail</th>
	    <th>File name</th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @pictures.each do |picture| %>
	  <tr>
	    <td><%= image_tag picture.image.url(:thumb) %></td>
	    <td><%= picture.image_file_name %></td>
	    <td>
	        <%= link_to 'View All Sizes', [:admin, picture], :class => "btn" %>
	    </td>

	    <td>
	      <% if can? :destroy, picture %>
	        <%= link_to 'Delete', [:admin, picture], :confirm => 'Are you sure?', :method => :delete, :class => "btn grey small" %>
	      <% end %>
	    </td>
	  </tr>
	<% end %>
	</table>
	
</div></div>