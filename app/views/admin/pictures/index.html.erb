<% title "Picture Library" %>

<h1><%= @title %></h1>

<table class="table table-striped">
  <thead>
	  <tr>
	    <th>Picture Thumbnail</th>
	    <th>File name</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @pictures.each do |picture| %>
	  <tr>
	    <td><%= image_tag picture.image.url(:thumb) %></td>
	    <td><%= picture.image_file_name %></td>
	    <td>
	        <%= link_to 'View Sizes', [:admin, picture], :class => "btn btn-mini" %>
	      <% if can? :destroy, picture %>
	        <%= link_to 'Delete', [:admin, picture], :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-mini btn-danger" %>
	      <% end %>
	    </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<% if can? :create, Picture %>
  <%= link_to 'Upload Picture', new_admin_picture_path, :class => 'btn btn-primary' %>
<% end %>

