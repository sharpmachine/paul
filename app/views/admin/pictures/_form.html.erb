<%= simple_form_for [:admin, @picture], :html => { :multipart => true, :class => 'form-horizontal upload_form' } do |f| %>
  
<fieldset>
<legend><%= controller.action_name.capitalize %> Picture</legend>

	<%= f.input :image %>
	
</fieldset>

<div class="form-actions">
	<%= link_to "Cancel", admin_pictures_path, :class => "btn" %> <%= f.button :submit, :class => 'btn btn-primary' %>
</div>
<% end %>

<%= render "layouts/uploading" %>