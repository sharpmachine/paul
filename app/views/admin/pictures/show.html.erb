<div class="row">
  <div class="span12">
	<% title @picture.title %>

	<h1><%= @title %></h1>

	<dl class="dl-horizontal">
	  <dt><strong>Description</strong></dt>
	  <dd><%= @picture.description %></dd>
	  <dt><strong>Large</strong></dt>
	  <dd><%= image_tag @picture.photo_url(:large) %></dd>
	  <dt><strong>Medium</strong></dt>
	  <dd><%= image_tag @picture.photo_url(:medium) %></dd>
	  <dt><strong>Small</strong></dt>
	  <dd><%= image_tag @picture.photo_url(:small) %></dd>
	  <dt><strong>Thumb</strong></dt>
	  <dd><%= image_tag @picture.photo_url(:thumb) %></dd>
	</dl>

	<div class="form-actions">
	  <%= link_to "Back", admin_pictures_path, :class => 'btn'  %>
	<%- if can? :destroy, @picture -%>
	  <%= link_to "Delete", admin_picture_path(@picture),
	              :method => 'delete',
	              :confirm => 'Are you sure?',
	              :class => 'btn btn-danger' %>
	<%- end -%>
	</div>
  </div>
</div>