<%= simple_form_for [:admin, @page], :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>
<legend><%= controller.action_name.capitalize %> Page Block</legend>

	<%= f.input :title %>
	<%= f.input :content %>		
	
</fieldset>

<div class="form-actions">

    	<%= link_to "Cancel", admin_pages_path, :class => "btn small grey" %> <%= f.button :submit, :class => 'btn btn-primary' %>
</div>
<% end %>
