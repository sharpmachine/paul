<%= form_for([:admin, @page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :size => "60x20" %>
  </div>

  <div class="actions">
    <%= f.submit "Save Content" %>
  </div>
<% end %>
