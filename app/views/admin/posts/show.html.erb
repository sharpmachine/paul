<div class="row">
  <div class="span12">
	<%- title @post.title -%>

	<h1><%= @title %></h1>

	<dl class="dl-horizontal">
	  <dt><strong>Category:</strong></dt>
	  <dd><%= link_to @post.category.name, category_path(@post.category) %></dd>
	  <dt><strong>Tags:</strong></dt>
	  <dd><%= @post.tags.collect {|t| t.tagstring }.join(", ") %></dd>
	  <dt><strong>Post:</strong></dt>
	  <dd><%= raw(@post.content) %></dd>
	</dl>

	<div class="form-actions">
	  <%= link_to "Back", admin_posts_path, :class => 'btn btn-small'  %>
	  <%= link_to "Edit", edit_admin_post_path(@post), :class => 'btn btn-primary' %>
	  <%= link_to "Publish", publish_admin_post_path(@post), :class => 'btn btn-success' %>
	  <%= link_to "Delete", admin_posts_path(@post),
	              :method => 'delete',
	              :confirm => 'Are you sure?',
	              :class => 'btn btn-danger' %>
	</div>
  </div>	
</div>	