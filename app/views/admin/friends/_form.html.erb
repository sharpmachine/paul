<%= simple_form_for [:admin, @friend], :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>
<legend><%= controller.action_name.capitalize %> Friend</legend>

<%= f.input :featured, :collection => [['Yes - Show on friends page', true] ,['No - Just show button to website', false]], :as => :radio %>
  <%= f.input :title, :label => "Title e.g. 'Athlete'" %>
  <%= f.input :name %>
  <%= f.input :description, :as => :text, :input_html => { :rows => 6 } %>
  <%= f.input :url %>
  <%= f.association :picture, :collection => Picture.order('updated_at desc'), :input_html => { :class => 'chzn-select', 'data-placeholder' => "Choose a picture..." } %>	

</fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_friends_path, :class => "btn" %>
  </div>
<% end %>