<div class="row">
  <div class="span12">
<% title @user.firstname + " " + @user.lastname %>

<h1><%= @title %></h1>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @user.firstname %> <%= @user.lastname %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= raw(@user.description) %></dd>
  <dt><strong>Avatar:</strong></dt>
  <dd><%= image_tag @user.avatar_url(:thumb) if @user.avatar? %></dd>
<%- if can? :manage, :roles -%>
  <dt><strong>Role:</strong></dt>
  <dd><span class="label label-info"><%= @user.role %></span></dd>
<%- end -%>
</dl>

<div class="form-actions">
  <%= link_to "Back", admin_users_path, :class => 'btn btn-small'  %>
<%- if can? :update, @user -%>
  <%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn btn-primary' %>
<%- end -%>
	    <%- if can? :manage, :roles -%>
  <%= link_to "Delete", admin_user_path(@user),
              :method => 'delete',
              :confirm => 'Are you sure?',
              :class => 'btn btn-danger' %>
<%- end -%>
</div>

</div></div>