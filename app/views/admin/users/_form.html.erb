<%= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f| %>
  
<fieldset>
<legend><%= controller.action_name.capitalize %> User</legend>

	<%= f.input :firstname %>
	<%= f.input :lastname %>
	<%= f.input :role, :collection => User::ROLES, :input_html => { :class => 'chzn-select', 'data-placeholder' => 'Choose a role...' } %>		
	<%= f.input :email %>
	
</fieldset>

<div class="form-actions">

    	<%= link_to "Cancel", admin_users_path, :class => "btn small grey" %> <%= f.button :submit, :class => 'btn btn-primary' %>
</div>
<% end %>
