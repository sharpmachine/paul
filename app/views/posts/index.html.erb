<div class="row">
	
	<div class="span6">
			
		<% @posts.in_groups_of(2, false) do |posts| %>  
			<div class="row">
		      <% posts.each do |post| %>  
		      <div class="span3"><%= render post %></div>
		      <% end %>  
			</div>
		<% end %>	

	</div>

	<div class="span3">
		
		<%= link_to "Subscribe to Blog", posts_path(:format => "atom"), :class => "btn" %>
		
		<h1>Categories</h1>

		<ul>
		<% @categories.each do |c| %>
			<li><%= link_to c.name, category_path(c) %></li>
		<% end %>	
		</ul>

		<h1>Tag List</h1>

		<%= tag_cloud(@tagcloud) %>

		
	</div>	

</div>

<div class="row">
	<div class="span12">
		<%= paginate @posts %>
	</div>	
</div>	