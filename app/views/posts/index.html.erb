<% title "Blog" %>

<div class="container">
<div class="row">
	<% if params[:tag].present? %>
	<div class="span24">
		<h3><%= link_to image_tag("tag.png"), posts_path, :title => "Back to Blog Home" %>&nbsp;Tag / <strong><%= params[:tag] %></strong></h3>
	</div>
	<% elsif params[:q].present? %>
		<div class="span24">
			<h3><%= link_to image_tag("search_icon.png"), posts_path, :title => "Back to Blog Home" %>&nbsp;Search / <strong><%= params[:q] %></strong></h3>
		</div>	
	<% else %>
		<div class="span24 pad"></div>
	<% end %>
</div>	
<div class="row">
	
	<div class="span17">
		
		<% if @posts.any? %>	
			<% @posts.in_groups_of(2, false) do |posts| %>  
				<div class="row">
			      <% posts.each do |post| %>  
			      <div class="span8">
					<h5><%= post.category.name %></h5>
				    <%= render post %>
				  </div>
			      <% end %>  
				</div>
			<% end %>	
		<% else %>
			<div class="row">
		      <div class="span8">
				<h5>No Posts Found</h5>
			  </div>
			</div>			
		<% end %>
	</div>

	<div class="span7">
		<%= render :partial => "side" %>
	</div>	

</div>
<div class="row">
	<div class="span24 pad"></div>
</div>
<div class="row">
	<div class="span24">
		<%= paginate @posts %>
	</div>	
</div>	

</div>