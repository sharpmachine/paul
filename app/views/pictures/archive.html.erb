<% title "Photo Archive" %>

<div class="filmstrip-bg">
	<div class="container">
		<div class="row">
			<div class="span24">
				<h1><small>My Photos</small><br /><%= @title %></h1>
			</div>
		</div>
	<% @pictures.in_groups_of(3, false) do |pictures| %>  
		<div class="row">
	      <% pictures.each do |picture| %>  
			<div class="span8" style="margin-bottom:10px; ">
				
				<%= link_to image_tag(picture.photo_url(:small)), picture.photo_url(:large), :title => picture.description.present? ? "#{picture.title} - #{picture.description}" : picture.title, :class => "fancybox" %>
													
			</div>	
	      <% end %>  
		</div>
	<% end %>		
</div></div>	

<div class="container">
<div class="row">
	<div class="span24">
		<%= paginate @pictures %>
	</div>	
</div>	

</div>