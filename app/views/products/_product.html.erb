<% home_page ||= false %>
<div class="page-box <%= home_page ? "home" : "" %>">
	<div class="container">	
		<%= image_tag product.image.url(:small), :class => "product-image" %>		
		<h6><%= product.title %></h6>
		<p><%= markdown(product.short_description) %></p>
	</div>
</div>
<div class="read-more">
<%= link_to "Buy at iBethel", product.url, :class => "btn btn-inverse" %><% if home_page %>&nbsp;<%= link_to "See all products", products_path, :class => "btn" %><% end %>
</div>		