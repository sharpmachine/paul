<% title "Books and Teaching Resources" %>

<div class="container">
	<div class="row">
		<div class="span18">	
		<% if params[:q].present? %>	
			<h3><%= link_to image_tag("search_icon.png"), products_path, :title => "Back to Blog Home" %>&nbsp;Search / <strong><%= params[:q] %></strong></h3>
		<% else %>
			&nbsp;
		<% end %>
		</div>
		<div class="span6">	
		<%= form_tag(products_path, :method => "get", :class => "form-search pull-right", :style => "margin-top:40px; ") do %>
			<%= text_field_tag(:q, params[:q], :class => "search-query", :placeholder => "SEARCH PRODUCTS") %><%= submit_tag("", :name => nil, :class => "search-btn") %><% end %>
		</div>
	</div>
	<% @products.in_groups_of(3, false) do |products| %>  
		<div class="row">
	      <% products.each do |product| %>  
	      <div class="span8"><%= render product %></div>
	      <% end %>  
		</div>
	<% end %>
	<div class="row">
		<div class="span24 pad"></div>
	</div>
	<div class="row">
		<div class="span24">
			<%= paginate(@products) %>
		</div>
	</div>		
</div>


<div class="white-bg" style="margin-top:27px; ">
	<div class="container">	
		<div class="row">
		  <div class="span24">
		  	<h1>Amazon & iBethel</h1>
			<p>Paul Manwanring's books are available through <%= link_to "Amazon.com", "http://www.amazon.com/Paul-Manwaring/e/B005TKJ2IC/ref=sr_tc_2_0?qid=1351527472&sr=1-2-ent" %> and also through the <%= link_to "Bethel online bookstore", "http://store.ibethel.org/index.php?browse_authors_id=17&ref=12" %>.</p>
		  </div>
		</div>
	</div>
</div>