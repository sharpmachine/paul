<!DOCTYPE html>
<html lang="en">
<head>
  <title>PaulManwaring.com - <%= @title ||= "Admin" %></title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "admin/admin", :media => "all" %>
  <%= javascript_include_tag "admin/admin" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield(:head) %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "PaulManwaring.com", root_path, :class => "brand" %>

		<div class="btn-group pull-right">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i> <%= current_user.firstname %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit Profile", edit_user_registration_path %>
            <li class="divider"></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, :method => "delete" %>
          </ul>
        </div>

        <div class="nav-collapse">
			<ul class="nav nav-pills">
			  	<li class="dropdown<% if @selected_nav == "blog" %> active<% end %>">
				    <a href="#"
				          class="dropdown-toggle"
				          data-toggle="dropdown">
				          Blog
				          <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
						<% if can? :update, Post %><li class="<% if @selected_page == "posts" %>active<% end %>"><%= link_to "Posts", admin_posts_path %></li><% end %>
						<% if can? :update, Category %><li class="<% if @selected_page == "categories" %>active<% end %>"><%= link_to "Categories", admin_categories_path %></li><% end %>
				    </ul>
				  </li>
			
			<% if can? :update, Page %>
			  <li class="<% if @selected_page == "blocks" %>active<% end %>">
			     <%= link_to "Page Blocks", admin_pages_path %></li>
			  </li>
			<% end %>
			
			<% if can? :update, Product %>
			  <li class="<% if @selected_page == "products" %>active<% end %>">
			     <%= link_to "Store", admin_products_path %></li>
			  </li>
			<% end %>			
			
			<% if can? :update, Picture %>
			  <li class="<% if @selected_page == "pictures" %>active<% end %>">
			     <%= link_to "Pictures", admin_pictures_path %>
			  </li>
			<% end %>			
			
			<% if can? :update, User %>
			  <li class="<% if @selected_page == "users" %>active<% end %>">
			     <%= link_to "Users", admin_users_path %>
			  </li>
			<% end %>		
			
			</ul>

        </div>
      </div>
    </div>
  </div>

  <div class="container">
	
	<%- flash.each do |name, msg| -%>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			<a class="close" data-dismiss="alert">x</a>
			<%= msg %>
		</div>
	<%- end -%>	
	
    <div class="row">
      <div class="span9"><%= yield %></div>
      <div class="span3">
        <%= yield(:side) %>
      </div>
    </div>
  </div>
</body>
</html>