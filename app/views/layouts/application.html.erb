<!DOCTYPE html>
<html lang="en">
<head>
  <title>PaulManwaring.com - <%= @title || "Welcome" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield(:head) %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "PaulManwaring", root_path, :class => "brand" %>

        <div class="nav-collapse">
			<ul class="nav nav-pills">
			  <li class="<% if @selected_page == "home" %>active<% end %>">
			     <%= link_to "Home", root_path %></li>
			  </li>
			
			  <li class="<% if @selected_page == "paul" %>active<% end %>">
			     <%= link_to "Paul", "" %></li>
			  </li>
			
			  <li class="<% if @selected_page == "blog" %>active<% end %>">
			     <%= link_to "Blog", posts_path %></li>
			  </li>
			
			  <li class="<% if @selected_page == "schedule" %>active<% end %>">
			     <%= link_to "Schedule", "" %>
			  </li>
			
			  <li class="<% if @selected_page == "invite" %>active<% end %>">
			     <%= link_to "Invite", "" %>
			  </li>
			
			  <li class="<% if @selected_page == "store" %>active<% end %>">
			     <%= link_to "Store", "" %>
			  </li>	
			
			  <li class="<% if @selected_page == "give" %>active<% end %>">
			     <%= link_to "Give", "" %>
			  </li>
			
			  <li class="<% if @selected_page == "friends" %>active<% end %>">
			     <%= link_to "Friends", "" %>
			  </li>	
			
			  <li class="<% if @selected_page == "photos" %>active<% end %>">
			     <%= link_to "Photos", "" %>
			  </li>	
			
			<% if user_signed_in? && current_user.is_admin? %>
			  <li>
			     <%= link_to "Admin", admin_posts_path %>
			  </li>									
			<% end %>
			
			</ul>

        </div>
      </div>
    </div>
  </div>

  <div class="container">
	
	<%- flash.each do |name, msg| -%>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			<a class="close" data-dismiss="alert">x</a>
			<%= msg %>
		</div>
	<%- end -%>	
	
    <div class="row">
      <div class="span9"><%= yield %></div>
      <div class="span3">
        <%= yield(:side) %>
      </div>
    </div>
  </div>
</body>
</html>